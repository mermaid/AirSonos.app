{
  "name": "airsonos.app",
  "version": "0.0.9",
  "description": "A front end for AirSonos",
  "main": "index.js",
  "dependencies": {
    "airsonos": "^0.2.6",
    "electron-config": "^0.2.1",
    "electron-prebuilt": "^1.4.13",
    "request": "^2.79.0",
    "request-promise": "^4.1.1",
    "semver-compare": "^1.0.0"
  },
  "devDependencies": {
    "appdmg": "^0.4.5",
    "electron-packager": "^8.4.0"
  },
  "scripts": {
    "test": "test",
    "start": "electron .",
    "clean": "rm -rf ./dist",
    "build": "npm run clean && npm run build:osx && npm run package:dmg",
    "build:osx": "electron-packager . AirSonos --out=dist --platform=darwin --arch=all --ignore=dist --ignore=README.md --ignore=.gitignore --icon=./img/airsonos-logo.icns",
    "package:dmg": "appdmg appdmg.json ./dist/AirSonos-darwin-x64/AirSonos.dmg",
    "postinstall": "npm rebuild --runtime=electron --target=1.4.13 --disturl=https://atom.io/download/atom-shell --build-from-sourcet && npm run fixappdmg",
    "fixappdmg": "cd ./node_modules/appdmg && rm -rf ./node_modules && npm install && cd ../.."
  },
  "repository": {
    "type": "git",
    "url": "AirSonos.app"
  },
  "keywords": [
    "sonos",
    "airsonos",
    "airplay",
    "apple"
  ],
  "author": "Mermaid",
  "license": "MIT"
}
